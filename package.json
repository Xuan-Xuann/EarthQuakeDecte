{
  "name": "earthquake-detection-integrated-system",
  "version": "1.0.0",
  "description": "Integrated earthquake detection system with server and web interface",
  "scripts": {
    "start": "concurrently \"npm run start:server\" \"npm run start:web\"",
    "start:server": "cd server && node websocket-server.js",
    "start:web": "cd web-interface && node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:web\"",
    "dev:server": "cd server && nodemon websocket-server.js",
    "dev:web": "cd web-interface && nodemon server.js",
    "install:all": "cd server && npm install && cd ../web-interface && npm install"
  },
  "keywords": [
    "earthquake",
    "detection",
    "sensor",
    "iot",
    "esp32",
    "websocket"
  ],
  "author": "YuXuann",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.0",
    "express": "^4.18.2",
    "moment": "^2.29.4",
    "node-fetch": "^2.6.7",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}